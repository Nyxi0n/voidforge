#!/usr/bin/env zsh
# pokefetch â€” random cute PokÃ©mon from predefined list piped into fastfetch ðŸŒŸ

# Custom Pokemon list
POKEMON_LIST=(vaporeon jolteon flareon espeon umbreon leafeon glaceon
  sylveon mewtwo pikachu chimchar pansear riolu lucario)

shiny_chance=25 # percentage (1â€“100)

# ðŸŽ² Pick one at random
pokemon=${POKEMON_LIST[RANDOM % ${#POKEMON_LIST[@]} + 1]}

# Roll a number from 1â€“100
roll=$((RANDOM % 100 + 1))

if ((roll <= shiny_chance)); then
  shiny_flag="--shiny"
else
  shiny_flag=""
fi

# ðŸ–¼ï¸ Generate & pipe into fastfetch
pokemon-colorscripts-go \
  --no-title \
  $shiny_flag \
  -n "$pokemon" |
  fastfetch \
    --config ~/.config/fastfetch/rose-pine.jsonc \
    --logo-type file-raw \
    --logo-height 10 \
    --logo-width 5 \
    --logo -
